# Ruby 3.x requires this explicitly
gem "webrick"

# Remote theme
gem "jekyll-remote-theme"

# --- Bonsai ecosystem plugins ---
gem "jekyll-data"
gem "jekyll-id"
gem "jekyll-wikilinks"
gem "jekyll-namespaces"
gem "jekyll-graph"

# --- Standard plugins ---
gem "jekyll-feed"
gem "jekyll-seo-tag"
gem "jekyll-sitemap"
