source "https://rubygems.org"

# Bonsai deps require Jekyll 4.2.x
gem "jekyll", "~> 4.2.0"

# Remote theme support
gem "jekyll-remote-theme"

# Theme/plugin deps
gem "jekyll-data"

# Common plugins
gem "jekyll-feed"
gem "jekyll-seo-tag"
gem "jekyll-sitemap"

# Required for the `{% jekyll_graph %}` tag
gem "jekyll-graph"
