source "https://rubygems.org"

# Bonsai deps require Jekyll 4.2.x
gem "jekyll", "~> 4.2.0"

# Remote theme support
gem "jekyll-remote-theme"

# Bonsai ecosystem plugins
gem "jekyll-data"
gem "jekyll-id"
gem "jekyll-wikilinks"

# Common plugins
gem "jekyll-feed"
gem "jekyll-seo-tag"
gem "jekyll-sitemap"

# Required for `{% jekyll_graph %}`
gem "jekyll-graph"
